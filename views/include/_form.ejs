<form action="/api/users" method="post" id="add_user">
    <fieldset class="border border-dark p-3">
       <legend class="w-auto mx-auto">New User</legend>
       <small class="text-muted text-center d-block">use the form below to create a new account</small>
       <div class="form-group">
           <label for="name">Name</label>
           <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name">
         </div>
         <div class="form-group">
           <label for="email">Email</label>
           <input type="email" name="email" id="email" class="form-control" placeholder="Enter Your email id">
         </div>

         <div class="form-check form-check-inline">
             <label class="form-check-label">
                 Gender
             </label>
         </div>
         <div class="form-check form-check-inline">
             <label class="form-check-label">
                 <input class="form-check-input" type="radio" name="gender" id="gender" value="Male"> Male
             </label>
         </div>
     
         <div class="form-check form-check-inline">
             <label class="form-check-label">
                 <input class="form-check-input" type="radio" name="gender" id="gender" value="Female"> Female
             </label>
         </div>
         
         <br>
         <div class="form-check form-check-inline">
           <label class="form-check-label">
             Status
           </label>
         </div>
         <div class="form-check form-check-inline">
             <label class="form-check-label">
                 <input class="form-check-input" type="radio" name="status" id="status" value="Active"> Active
             </label>
         </div>

         <div class="form-check form-check-inline">
             <label class="form-check-label">
                 <input class="form-check-input" type="radio" name="status" id="status" value="Inactive"> Inactive
             </label>
         </div>

         <div class="form-group mb-0">
             <button type="submit" class="btn btn-success mt-2 form-control ">Save User</button>
         </div>
    </fieldset>

   </form>